// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

// Necessary for Next auth
model Account {
    id                 String  @id @default(uuid())
    userId             String
    type               String
    provider           String
    providerAccountId  String
    oauth_token        String?
    oauth_token_secret String?
    refresh_token      String? @db.LongText
    access_token       String? @db.LongText
    expires_at         Int?
    token_type         String?
    scope              String?
    id_token           String? @db.LongText
    session_state      String?
    user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
    @@index([userId])
}

model Session {
    id           String   @id @default(uuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

model User {
    id                    String                  @id @default(cuid())
    name                  String?
    email                 String?                 @unique
    emailVerified         DateTime?
    image                 String?
    accounts              Account[]
    sessions              Session[]
    YouTubeChannelDetails YouTubeChannelDetails[]
    YouTubeVideo          YouTubeVideo[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model YouTubeChannelDetails {
    id                             String         @id @default(cuid())
    yt_channel_id                  String         @unique
    yt_channel_title               String?
    yt_channel_thumbnails          String?
    yt_channel_customurl           String?
    yt_channel_published_at        DateTime?
    yt_channel_uploads_playlist_id String
    user                           User           @relation(fields: [userId], references: [id])
    userId                         String
    access_token                   String         @db.LongText
    refresh_token                  String         @db.LongText
    id_token                       String         @db.LongText
    expiry_date                    BigInt
    YouTubeVideo                   YouTubeVideo[]

    @@index([userId])
}

model YouTubeVideo {
    id                   String                @id @default(cuid())
    yt_video_id          String                @unique
    ytChannel            YouTubeChannelDetails @relation(fields: [yt_channel_id], references: [yt_channel_id])
    yt_channel_id        String
    yt_video_title       String                @db.LongText
    yt_video_description String                @db.LongText
    yt_video_thumbnail   String                @db.LongText
    User                 User?                 @relation(fields: [user_id], references: [id])
    user_id              String?
    YouTubeComments      YouTubeComments[]

    @@index([yt_channel_id])
    @@index([user_id])
}

model YouTubeComments {
    id                  String       @id @default(cuid())
    hash                String       @unique
    author_display_name String
    author_profile_pic  String
    author_channel_url  String
    author_channel_id   String
    ytVideoId           YouTubeVideo @relation(fields: [yt_video_id], references: [id])
    yt_video_id         String
    comment             String       @db.LongText
    mood                String
    emojis              String

    @@index([yt_video_id])
}
